<% breadcrumb('首界面标志', '首界面标志列表') %>
<br>
<table border="0" id="listTable" cellspacing="0" cellpadding="0">
  <thead>
    <tr>
      <th style="text-align: left; padding-left: 8px; font-size: 14px; background-color: darkgray; color: white" colspan="6">
        首界面标志列表
      </th>
    </tr>
    <tr>
      <th width="100" height="30">类型</th>
      <th width="100">位置</th>
      <th width="100">名称</th>
      <th width="100">操作</th>
    </tr>
  </thead>
  <tbody>
    <% @homepagelocs.each do |i| %>
      <tr>
        <td><%= i.type_name %></td>
        <td><%= i.location %></td>
        <td><%= i.item.try(:name) %></td>
        <td>
            <%= link_to("删除", home_page_location_path(i), method: :delete, data: { confirm: '您确定要删除吗?' } ) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div style="width: 90%">
  <input type="button" value="新增首界面标志" onclick="doSwitchAction2(&#39;/home_page_locations/new&#39;)" style="margin-top: 10px; float: right">
</div>
<div id="dialog" title="首界面标志管理">
</div>