<tbody>
  <tr>
    <td class="labelText">
      <%= form.label :name, '分类名称' %>
    </td>
    <td class="inputArea">
      <%= form.text_field :name, style: "width: 85%"%>
      <font color="red">*</font>
    </td>
    <td class="labelText">
      <%= form.label :status, '状态' %>
    </td>
    <td class="">
      <%= form.radio_button("status", "1", { :checked => @goods_type.status || @goods_type.status.nil? }) %>显示 &nbsp;&nbsp;&nbsp;&nbsp;
      <%= form.radio_button("status", "0", { :checked => !(@goods_type.status || @goods_type.status.nil?) }) %>隐藏
    </td>
  </tr>
  <tr>
    <td class="labelText">
      <%= form.label :weight, '权重' %>
    </td>
    <td class="inputArea">
      <%= form.text_field :weight, style: "width: 85%"%>
      <font color="red">*</font>
    </td>
    <td class="labelText">
      <%= form.label :category, '分类' %>
      <font color="red">*</font>
    </td>
    <td>
      <%= form.select :category, GoodsType::CATEGORIES %>
    </td>
  </tr>
</tbody>