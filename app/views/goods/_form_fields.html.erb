<tbody>
  <tr>
    <td class="labelText">
      <%= form.label :name, '商品名称' %>
    </td>
    <td class="inputArea">
      <%= form.text_field :name %>
      <font color="red">*</font>
    </td>
    <td class="labelText">
      <%= form.label :customerId, '商家' %>
    </td>
    <td class="inputArea">
      <%= form.select :customerId, Customer.all.collect {|p| [ p.name, p.id ] } %>
      <font color="red">*</font>
    </td>
  </tr>

  <tr>
    <td class="labelText">
      <%= form.label :price, '原价' %>
    </td>
    <td class="inputArea">
      <%= form.text_field :price %>
    </td>
    <td class="labelText">
      <%= form.label :discountprice, '优惠价' %>
    </td>
    <td class="inputArea">
      <%= form.text_field :discountprice %>
    </td>
  </tr>

  <tr>
    <td class="labelText">
      <%= form.label :goodstypeId, '商品分类' %>
    </td>
    <td class="inputArea">
      <%= form.select :goodstypeId, GoodsType.all.collect {|p| [ p.name, p.id ] } %>
    </td>
    <td class="labelText">
      <%= form.label :logo1url, '商品Logo' %>
    </td>
    <td class="inputArea">
      <%= form.file_field :logo1url %>
      <%= image_tag @good.logo1url %>
    </td>
  </tr>

  <tr>
    <td class="labelText">
      <%= form.label :description, '商品描述' %>
    </td>
    <td colspan="3" class="inputArea">
      <%= form.text_area :description %>
    </td>
  </tr>
</tbody>