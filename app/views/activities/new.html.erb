<% breadcrumb('活动管理', '新增活动') %>
<%= form_for @activity, url: {action: "create"} do |f| %>
  <table border="0" cellspacing="0" cellpadding="0">
    <thead>
      <tr>
        <th style="text-align: left; padding-left: 8px; font-size: 14px; background-color: darkgray; color: white" colspan="4">
            新增活动
        </th>
      </tr>
    </thead>
    <%= render partial: 'form_fields', locals: {form: f} %>
  </table>

  <%= f.submit '保存' %>
  <input type="reset" value="重置">
  <span style="color: red;" id="msgContent"></span>
<% end %>