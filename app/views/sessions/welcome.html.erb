    <body style="">
        <div class="container">
      <!-- Codrops top bar -->
            <!--/ Codrops top bar -->
      <header>
        <h1>商业百货管理系统</h1>
        <div class="support-note">
          <span class="note-ie">Sorry, only modern browsers.</span>
        </div>
      </header>
      <section class="main">
        <form class="form-2">
          <h1><span class="log-in">用户登录</span> </h1>
