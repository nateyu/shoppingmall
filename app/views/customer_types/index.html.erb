<br>
    <table border="0" id="listTable" cellspacing="0" cellpadding="0">
      <thead>
        <tr>
          <th style="text-align: left; padding-left: 8px; font-size: 14px; background-color: darkgray; color: white" colspan="6">
            商家分类列表
          </th>
        </tr>
        <tr>
          <th width="100" height="30">
            分类名称
          </th>
          <th width="100">
            分类描述
          </th>
          <th width="100">
            状态
          </th>
          <th width="100">
            操作
          </th>
        </tr>
      </thead>
      <tbody>
        <% @customer_types.each do |i| %>
            <tr>
              <td>
                <%= i.name %>
              </td>
              <td>
                <%= i.description %>
              </td>
              <td>
                <%= i.status ? '显示' : '隐藏' %>
              </td>
              <td>
                <a href="<%= edit_customer_type_path(i)%>">修改</a>
                </td>
            </tr>
        <% end %>
      </tbody>
    </table>
    <div style="width: 90%">
        <input type="button" value="新增分类" onclick="doSwitchAction2(&#39;customer_types/new&#39;)" style="margin-top: 10px; float: right"> 
    </div>
    <div id="dialog" title="商家分类管理">
    </div>