<tbody>
  <tr>
    <td class="labelText">
      <%= form.label :name, '分类名称' %>
    </td>
    <td class="inputArea">
        <%= form.text_field :name %>
        <font color="red">*</font>
    </td>
    <td class="labelText">
      <%= form.label :name, '状态' %>
    </td>
    <td class="">
        <%= form.radio_button("status", "1", { :checked => @customer_type.status || @customer_type.status.nil? }) %>显示 &nbsp;&nbsp;&nbsp;&nbsp;
        <%= form.radio_button("status", "0", { :checked => !(@customer_type.status || @customer_type.status.nil?) }) %>隐藏
    </td>
  </tr>
  <tr>
    <td class="labelText">
      <%= form.label :description, '分类描述' %>
    </td>
    <td class="inputArea">
      <%= form.text_field :description %>
      <font color="red">*</font>
    </td>
    <td class="labelText">
    </td>
    <td class="">
    </td>
  </tr>
</tbody>